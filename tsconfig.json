{
	"compilerOptions": {
		"jsx": "react",
		"target": "es2015",
		"module": "es2020",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@containers/*": ["containers/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@router/*": ["router/*"],
			"@service/*": ["service/*"],
			"@http/*": ["http/*"]
		}
	},
	"include": ["src"]
}
